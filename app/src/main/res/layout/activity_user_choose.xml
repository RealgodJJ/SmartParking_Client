<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/activity_user_choose"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
            android:id="@+id/user_choose_user_respectful_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/respectful"
            android:textSize="20sp"
            android:textColor="#000000"/>

    <TextView
            android:id="@+id/user_choose_username_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/user_choose_user_respectful_text_view"
            android:textSize="20sp"
            android:textColor="#ff7700"/>

    <TextView
            android:id="@+id/user_choose_hello_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/user_choose_username_text_view"
            android:text="@string/hello"
            android:textSize="20sp"
            android:textColor="#000000"/>

    <TextView
            android:id="@+id/user_choose_choose_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_choose_user_respectful_text_view"

            android:text="@string/user_choose_reason"
            android:textSize="20sp"
            android:textColor="#000000"/>

    <RelativeLayout
            android:id="@+id/user_choose_parking_free_rate_relative_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_choose_choose_text_view"
            android:layout_marginTop="6dp"
            android:clickable="true"
            android:gravity="center_vertical">

        <TextView
                android:id="@+id/user_choose_parking_free_rate_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="@string/parking_free_rate"
                android:gravity="center"
                android:textSize="17sp"
                android:textColor="#00bfff"/>

        <EditText
                android:id="@+id/user_choose_parking_free_rate_edit_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dip"
                android:layout_toRightOf="@id/user_choose_parking_free_rate_text_view"
                android:gravity="center"
                android:textColor="#ff0d00"
                android:inputType="number"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/user_choose_distance_relative_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_choose_parking_free_rate_relative_layout"
            android:layout_marginTop="6dp"
            android:clickable="true"
            android:gravity="center_vertical">

        <TextView
                android:id="@+id/user_choose_distance_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="@string/distance"
                android:gravity="center"
                android:textColor="#00bfff"
                android:textSize="17sp"/>

        <EditText
                android:id="@+id/user_choose_distance_edit_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="6dip"
                android:layout_toRightOf="@id/user_choose_distance_text_view"
                android:textColor="#ff0d00"
                android:gravity="center"
                android:inputType="number"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/user_choose_parkFee_relative_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_choose_distance_relative_layout"
            android:layout_marginTop="6dp"
            android:clickable="true"
            android:gravity="center_vertical">

        <TextView
                android:id="@+id/user_choose_parkFee_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="@string/parkFee"
                android:gravity="center"
                android:textColor="#00bfff"
                android:textSize="17sp"/>

        <EditText
                android:id="@+id/user_choose_parkFee_edit_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="6dip"
                android:layout_toRightOf="@id/user_choose_parkFee_text_view"
                android:textColor="#ff0d00"
                android:gravity="center"
                android:inputType="number"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/user_choose_lightNum_relative_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_choose_parkFee_relative_layout"
            android:layout_marginTop="6dp"
            android:clickable="true"
            android:gravity="center_vertical">

        <TextView
                android:id="@+id/user_choose_lightNum_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="@string/lightNum"
                android:gravity="center"
                android:textColor="#00bfff"
                android:textSize="17sp"/>

        <EditText
                android:id="@+id/user_choose_lightNum_edit_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="6dip"
                android:layout_toRightOf="@id/user_choose_lightNum_text_view"
                android:textColor="#ff0d00"
                android:gravity="center"
                android:inputType="number"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/user_choose_input_time_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_choose_lightNum_relative_layout"
            android:layout_marginTop="6dp">

        <TextView
                android:id="@+id/user_choose_input_time_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/input_time"
                android:textSize="20sp"
                android:textColor="#000000"/>

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/user_choose_start_time_relative_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_choose_input_time_relative_layout"
            android:layout_marginTop="6dp"
            android:clickable="true"
            android:gravity="center_vertical">

        <TextView
                android:id="@+id/user_choose_start_time_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="@string/start_time"
                android:textColor="#000"
                android:textSize="17sp"/>

        <EditText
                android:id="@+id/user_choose_start_time_hour_edit_text"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textColor="#ff0000"
                android:gravity="center"
                android:inputType="number"
                android:layout_marginLeft="2dip"
                android:layout_toRightOf="@id/user_choose_start_time_text_view"/>

        <TextView
                android:id="@+id/user_choose_start_time_hour_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:layout_marginLeft="2dip"
                android:layout_toRightOf="@id/user_choose_start_time_hour_edit_text"
                android:text="@string/reserve_hour"
                android:layout_centerHorizontal="true"
                android:textSize="17sp"/>

        <EditText
                android:id="@+id/user_choose_start_time_minute_edit_text"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textColor="#ff0000"
                android:gravity="center"
                android:inputType="number"
                android:layout_marginLeft="2dip"
                android:layout_toRightOf="@id/user_choose_start_time_hour_text_view"/>

        <TextView
                android:id="@+id/user_choose_start_time_minute_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:layout_marginLeft="2dip"
                android:layout_toRightOf="@id/user_choose_start_time_minute_edit_text"
                android:text="@string/reserve_minute"
                android:layout_centerHorizontal="true"
                android:textSize="17sp"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/user_choose_end_time_relative_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_choose_start_time_relative_layout"
            android:clickable="true"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical">

        <TextView
                android:id="@+id/user_choose_end_time_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="@string/end_time"
                android:textColor="#000"
                android:textSize="17sp"/>

        <EditText
                android:id="@+id/user_choose_end_time_hour_edit_text"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textColor="#ff0000"
                android:gravity="center"
                android:layout_marginLeft="2dip"
                android:layout_toRightOf="@id/user_choose_end_time_text_view"
                android:inputType="number"/>

        <TextView
                android:id="@+id/user_choose_end_time_hour_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:layout_marginLeft="2dip"
                android:layout_toRightOf="@id/user_choose_end_time_hour_edit_text"
                android:text="@string/reserve_hour"
                android:layout_centerHorizontal="true"
                android:textSize="17sp"/>

        <EditText
                android:id="@+id/user_choose_end_time_minute_edit_text"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textColor="#ff0000"
                android:gravity="center"
                android:layout_marginLeft="2dip"
                android:layout_toRightOf="@id/user_choose_end_time_hour_text_view"
                android:inputType="number"/>

        <TextView
                android:id="@+id/user_choose_end_time_minute_text_view"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:layout_marginLeft="2dip"
                android:layout_toRightOf="@id/user_choose_end_time_minute_edit_text"
                android:text="@string/reserve_minute"
                android:layout_centerHorizontal="true"
                android:textSize="17sp"/>

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/user_choose_total_time_relative_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_choose_end_time_relative_layout"
            android:clickable="true"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical">

        <TextView
                android:id="@+id/user_choose_total_time_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="@string/total_time"
                android:textColor="#000"
                android:textSize="17sp"/>

        <EditText
                android:id="@+id/user_choose_total_time_edit_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#004cff"
                android:gravity="center"
                android:layout_marginLeft="2dip"
                android:layout_toRightOf="@id/user_choose_total_time_text_view"/>
    </RelativeLayout>

    <Button
            android:id="@+id/user_choose_best_estimate_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/best_estimate"
            android:textColor="#ffffff"
            android:background="#00ff37"
            android:textSize="25sp"
            android:layout_below="@+id/user_choose_total_time_relative_layout"
            android:layout_marginTop="6dp" />

</RelativeLayout>
