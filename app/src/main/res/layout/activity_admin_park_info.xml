<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/activity_adminpark_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

    <RelativeLayout
            android:id="@+id/admin_park_info_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1">

            <TableRow>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/parking_lot_name"
                        android:textSize="17sp"
                        android:textColor="#000"
                        android:gravity="center"/>
                <EditText
                        android:id="@+id/admin_park_info_parking_lot_name_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ff0000"
                        android:selectAllOnFocus="true"/>
            </TableRow>

            <TableRow>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/parking_lot_address"
                        android:textSize="17sp"
                        android:textColor="#000"
                        android:gravity="center"/>
                <EditText
                        android:id="@+id/admin_park_info_parking_lot_address_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ff0000"
                        android:selectAllOnFocus="true"/>
            </TableRow>

            <TableRow>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/destination"
                        android:textSize="17sp"
                        android:textColor="#000"
                        android:gravity="center"/>
                <EditText
                        android:id="@+id/admin_park_info_destination_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ff0000"
                        android:selectAllOnFocus="true"/>
            </TableRow>

            <TableRow>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/total_spaces"
                        android:textSize="17sp"
                        android:textColor="#000"
                        android:gravity="center"/>
                <EditText
                        android:id="@+id/admin_park_info_totalSpaces_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ff0000"
                        android:gravity="center"
                        android:selectAllOnFocus="true"/>
            </TableRow>

            <TableRow>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/total_available"
                        android:textSize="17sp"
                        android:textColor="#000"
                        android:gravity="center"/>
                <EditText
                        android:id="@+id/admin_park_info_totalAvailable_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ff0000"
                        android:gravity="center"
                        android:selectAllOnFocus="true"/>
            </TableRow>

            <TableRow>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/park_price"
                        android:textSize="17sp"
                        android:textColor="#000"
                        android:gravity="center"/>
                <EditText
                        android:id="@+id/admin_park_info_park_price_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ff0000"
                        android:gravity="center"
                        android:selectAllOnFocus="true"/>
            </TableRow>

            <TableRow>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/park_night_price"
                        android:textSize="17sp"
                        android:textColor="#000"
                        android:gravity="center"/>
                <EditText
                        android:id="@+id/admin_park_info_park_night_price_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ff0000"
                        android:gravity="center"
                        android:selectAllOnFocus="true"/>
            </TableRow>
        </TableLayout>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/admin_park_info_relative_layout">

        <Button
                android:id="@+id/admin_park_info_change_park_info_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/change_park_info"
                android:textColor="#ffffff"
                android:background="#ff0000"
                android:textSize="25sp"
                android:layout_marginTop="20dp" />

        <Button
                android:id="@+id/admin_park_info_save_park_info_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/save_park_info"
                android:layout_below="@id/admin_park_info_change_park_info_button"
                android:textColor="#ffffff"
                android:background="#93f119"
                android:textSize="25sp"
                android:layout_marginTop="20dp" />

    </RelativeLayout>


</RelativeLayout>
