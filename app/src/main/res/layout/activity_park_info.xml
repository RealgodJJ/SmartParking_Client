<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView
            android:id="@+id/parking_lot_image"
            android:layout_width="600sp"
            android:layout_height="150sp"
            android:layout_gravity="center"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1">

            <TableRow>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/parking_lot_name"
                        android:textSize="17sp"
                        android:textColor="#000"
                        android:gravity="center"/>
                <EditText
                        android:id="@+id/park_info_parking_lot_name_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ff0000"
                        android:selectAllOnFocus="true"/>
            </TableRow>

            <TableRow>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/parking_lot_address"
                        android:textSize="17sp"
                        android:textColor="#000"
                        android:gravity="center"/>
                <EditText
                        android:id="@+id/park_info_parking_lot_address_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ff0000"
                        android:selectAllOnFocus="true"/>
            </TableRow>

            <TableRow>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/destination"
                        android:textSize="17sp"
                        android:textColor="#000"
                        android:gravity="center"/>
                <EditText
                        android:id="@+id/park_info_destination_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ff0000"
                        android:selectAllOnFocus="true"/>
            </TableRow>

            <TableRow>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/total_spaces"
                        android:textSize="17sp"
                        android:textColor="#000"
                        android:gravity="center"/>
                <EditText
                        android:id="@+id/park_info_totalSpaces_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ff0000"
                        android:gravity="center"
                        android:selectAllOnFocus="true"/>
            </TableRow>

            <TableRow>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/total_available"
                        android:textSize="17sp"
                        android:textColor="#000"
                        android:gravity="center"/>
                <EditText
                        android:id="@+id/park_info_totalAvailable_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ff0000"
                        android:gravity="center"
                        android:selectAllOnFocus="true"/>
            </TableRow>

            <TableRow>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/park_price"
                        android:textSize="17sp"
                        android:textColor="#000"
                        android:gravity="center"/>
                <EditText
                        android:id="@+id/park_info_park_price_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ff0000"
                        android:gravity="center"
                        android:selectAllOnFocus="true"/>
            </TableRow>

            <TableRow>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/park_night_price"
                        android:textSize="17sp"
                        android:textColor="#000"
                        android:gravity="center"/>
                <EditText
                        android:id="@+id/park_info_park_night_price_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ff0000"
                        android:gravity="center"
                        android:selectAllOnFocus="true"/>
            </TableRow>

        </TableLayout>

    </RelativeLayout>

</LinearLayout>