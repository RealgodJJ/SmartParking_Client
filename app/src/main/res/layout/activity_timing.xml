<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/activity_fee"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView
            android:id="@+id/timing_timing_image_view"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/clock"/>

    <TextView
            android:id="@+id/timing_timing_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/timing_timing_image_view"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:text="00:00:00"
            android:padding="10dp"
            android:textSize="30sp"/>

    <Button
            android:id="@+id/timing_sure_to_stop_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/timing_timing_text_view"
            android:layout_centerHorizontal="true"
            android:text="@string/stop_time"
            android:textColor="#ffffff"
            android:background="#ff0d00"
            android:layout_marginTop="40dp"
            android:textSize="30sp"
    />

</RelativeLayout>
